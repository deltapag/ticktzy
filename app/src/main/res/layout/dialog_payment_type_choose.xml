<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_dialog_payment_type_choose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:text="@string/dialog_payment_type_title"
        android:textColor="@android:color/white"
        android:background="@drawable/background_dialog_payment_type_choose_title"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btnDebito"
        android:text="@string/text_dialog_payment_type_choose_debit_card"
        android:textColor="@android:color/white"
        android:background="@drawable/button_dialog_payment_type_choose_default"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/btnCredito"
        android:text="@string/text_dialog_payment_type_choose_credit_card"
        android:textColor="@android:color/white"
        android:background="@drawable/button_dialog_payment_type_choose_default"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/btnDinheiro"
        android:text="@string/text_dialog_payment_type_choose_money"
        android:textColor="@android:color/white"
        android:background="@drawable/button_dialog_payment_type_choose_default"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/btnSitefDireto"
        android:text="@string/text_dialog_payment_type_choose_sitef_direto"
        android:textColor="@android:color/white"
        android:background="@drawable/button_dialog_payment_type_choose_default"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  />

    <TextView
        android:id="@+id/btnCancelar"
        android:text="@string/cancel"
        android:textColor="@android:color/white"
        android:background="@drawable/background_dialog_payment_type_choose_cancel"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
